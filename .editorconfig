# Note that this configuration file is adapted from the examples from its
# official website as well as the version used by systemd

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8

# Matches multiple files with brace expansion notation
# 8 space indentation
[*.{c,cpp,h,hpp}]
indent_style = space
indent_size = 8

# 4 space indentation
[*.py]
indent_style = space
indent_size = 4

# Tab indentation (no size specified)
[Makefile]
indent_style = tab
